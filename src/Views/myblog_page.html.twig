<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Freelancer - Start Bootstrap Theme</title>

    <!-- Bootstrap Core CSS -->
    <link href="//localhost/myblog/web/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Theme CSS -->
    <link href="//localhost/myblog/web/css/freelancer.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="//localhost/myblog/web/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

 

</head>

<body id="page-top" class="index">

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="#page-top">Mon Blog</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <a href="../index.php/#contact">Contact</a>
                    </li>
					<li>
                        <a href="#myblog">my Blog</a>
                    </li>
                    <li>
                        <a href="pdf/cv.pdf" download>Mon CV</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-text">
                        <span class="name">{{ title }}</span>
                     
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Contact Section -->
    <section id="myblog">
        <div class="container">

            <div class="row">
				<div class="col-lg-8 col-lg-offset-2">
				{% for post in blogPosts %}
					<h2>{{ post.title }}<h2>
					<p> {{ post.chapo }} <p>
					<br>
					<p> {{ post.dateMaj|date("d/m/y") }} <p>
					<a href="index.php/blog/view/{{ post.id }}">more</a>
					<hr class="star-primary">
				{% endfor %}
				</div>
            </div>
        </div>
    </section>

   <!-- Footer -->
    <footer class="text-center">
        <div class="footer-above">
            <div class="container">
                <div class="row">
                    <div class="footer-col col-md-4">
                    </div>
                    <div class="footer-col col-md-4">
                        <h3>Around the Web</h3>
                        <ul class="list-inline">
						{% if profil.facebook %}
                            <li>
                                <a href="{{ profil.facebook }}" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
                            </li>
						{% endif %}
						{% if profil.googlePlus %}
                            <li>
                                <a href="{{ profil.googlePlus }}" class="btn-social btn-outline"><i class="fa fa-fw fa-google-plus"></i></a>
                            </li>
						{% endif %}
						{% if profil.twitter %}
                            <li>
                                <a href="{{ profil.twitter }}" class="btn-social btn-outline"><i class="fa fa-fw fa-twitter"></i></a>
                            </li>
						{% endif %}
						{% if profil.linkedin %}
                            <li>
                                <a href="{{ profil.linkedin }}" class="btn-social btn-outline"><i class="fa fa-fw fa-linkedin"></i></a>
                            </li>
						{% endif %}
						{% if profil.dribbble %}
                            <li>
                                <a href="{{ profil.dribbble }}" class="btn-social btn-outline"><i class="fa fa-fw fa-dribbble"></i></a>
                            </li>
						{% endif %}
						{% if profil.github %}
							<li>
                                <a href="{{ profil.github }}" class="btn-social btn-outline"><i class="fa fa-fw fa-github"></i></a>
                            </li>
						{% endif %}
                        </ul>
                    </div>
                    <div class="footer-col col-md-4">
                     </div>
                </div>
            </div>
        </div>
        <div class="footer-below">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        Copyright &copy; Your Website 2017
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
    <div class="scroll-top page-scroll hidden-sm hidden-xs hidden-lg hidden-md">
        <a class="btn btn-primary" href="#page-top">
            <i class="fa fa-chevron-up"></i>
        </a>
    </div>

    <!-- jQuery -->
    <script src="//localhost/myblog/web/vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="//localhost/myblog/web/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Plugin JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>

    <!-- Contact Form JavaScript -->
    <script src="https://localhost/myblog/web/js/jqBootstrapValidation.js"></script>
    <script src="https://localhost/myblog/web/js/contact_me.js"></script>

    <!-- Theme JavaScript -->
    <script src="//localhost/myblog/web/js/freelancer.min.js"></script>

</body>

</html>
